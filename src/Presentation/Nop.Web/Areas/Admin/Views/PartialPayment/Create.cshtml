@model Nop.Web.Areas.Admin.Models.PartialPayments.PartialPaymentModel
@{
    ViewBag.PageTitle = T("Admin.Promotions.PartialPayments.AddNew").Text;
    Html.SetActiveMenuItemSystemName("Partial Payments");
}

<form asp-controller="PartialPayment" asp-action="Create" method="post" id="partial-payment-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Promotions.PartialPayments.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Promotions.PartialPayments.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary"></button>
        </div>
    </div>
</form>