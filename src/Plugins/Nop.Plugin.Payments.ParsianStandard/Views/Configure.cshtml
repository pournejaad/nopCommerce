@model Nop.Plugin.Payments.Parsian.Models.ConfigurationModel
@inject Ferasat.Core.IWebHelper webHelper
@{
    Layout = "_ConfigurePlugin";
}


<form asp-controller="PaymentParsian" asp-action="Configure" method="post">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.Raw(T("Plugins.Payments.Parsian.Instructions"))

                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="Pin"/>
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Pin"/>
                        <span asp-validation-for="Pin"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>