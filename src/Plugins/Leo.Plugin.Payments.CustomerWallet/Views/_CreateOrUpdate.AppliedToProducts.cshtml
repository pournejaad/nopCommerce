@model PartialPaymentModel


@if (Model.Id > 0)
{
    <div class="card-body">
        @await Html.PartialAsync("Table", new DataTablesModel
        {
            Name = "products-grid",
            UrlRead = new DataUrl("ProductList", "PartialPayment", new RouteValueDictionary {[nameof(Model.PartialPaymentProductSearchModel.PartialPaymentId)] = Model.PartialPaymentProductSearchModel.PartialPaymentId}),
            UrlDelete = new DataUrl("ProductDelete", "PartialPayment", new RouteValueDictionary {[nameof(Model.PartialPaymentProductSearchModel.PartialPaymentId)] = Model.PartialPaymentProductSearchModel.PartialPaymentId}),
            BindColumnNameActionDelete = nameof(PartialPaymentProductModel.ProductId),
            Length = Model.PartialPaymentProductSearchModel.PageSize,
            LengthMenu = Model.PartialPaymentProductSearchModel.AvailablePageSizes,
            ColumnCollection = new List<ColumnProperty>
            {
                new ColumnProperty(nameof(PartialPaymentProductModel.ProductName))
                {
                    Title = T("Admin.Promotions.PartialPayments.AppliedToProducts.Product").Text
                },
                new ColumnProperty(nameof(PartialPaymentProductModel.ProductId))
                {
                    Title = T("Admin.Common.View").Text,
                    Width = "150",
                    ClassName = NopColumnClassDefaults.Button,
                    Render = new RenderButtonView(new DataUrl("~/Admin/Product/Edit/"))
                },
                new ColumnProperty(nameof(PartialPaymentProductModel.ProductId))
                {
                    Title = T("Admin.Common.Delete").Text,
                    Width = "150",
                    Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                    ClassName = NopColumnClassDefaults.Button
                }
            }
        })
    </div>
    <div class="card-footer">
        <button type="submit" id="btnAddNewProduct" onclick="javascript:OpenWindow('@(Url.Action("ProductAddPopup", "PartialPayment", new {partialPaymentId = Model.Id, btnId = "btnRefreshProducts", formId = "partial-payment-form"}))', 800, 800, true); return false;" class="btn btn-primary">
            @T("Admin.Promotions.PartialPayments.AppliedToProducts.AddNew")
        </button>
        <button type="submit" id="btnRefreshProducts" style="display: none"></button>
        <script>
            $(document).ready(function () {
                $('#btnRefreshProducts').click(function () {
                    //refresh grid
                    updateTable('#products-grid');
                    //return false to don't reload a page
                    return false;
                });
            });
        </script>
    </div>
}
else
{
    <div class="card-body">
        @T("Admin.Promotions.PartialPayments.AppliedToProducts.SaveBeforeEdit")
    </div>
}